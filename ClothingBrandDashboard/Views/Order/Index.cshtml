@{
    ViewBag.bigtitle = "Order Management";
    ViewBag.smalltitle = "All Orders ";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <style>

        .dt-search {
            display: none;
        }

        .dt-length {
            display: none;
        }

        .search-wrapper input[type="date"] {
            width: 150px; /* Set a fixed width */
            padding: 0.375rem 0.75rem; /* Padding to match other inputs */
            margin-left: 10px; /* Spacing from the previous element */
            border: 1px solid #ced4da; /* Border styling */
            border-radius: 0.25rem; /* Border radius for rounded corners */
            font-size: 1rem; /* Font size */
        }

            .search-wrapper input[type="date"]:focus {
                border-color: #80bdff; /* Border color on focus */
                outline: none; /* Remove default outline */
                box-shadow: 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Shadow effect on focus */
            }

        .search-wrapper .btn {
            margin-left: 10px; /* Spacing between buttons and inputs */
        }

    </style>
}
@* <input type="datetime" id="dateSearch" placeholder="Search by date"  /> *@


<div class="container">
    <div class="row align-items-center">
        <div class="col-auto">
            <div class="search-wrapper d-flex align-items-center">
                <label for="startDate" class="me-2">Start Date:</label>
                <input type="date" id="startDate" placeholder="Start Date">
                <label for="endDate" class="me-2 ms-3">End Date:</label>
                <input type="date" id="endDate" placeholder="End Date">
            </div>
        </div>
        <div class="col-auto ms-auto">
            <div class="search-wrapper d-flex align-items-center">
                <i class="fas fa-search" id="searchIcon"></i>
                <input type="text" id="customSearch" placeholder="Search...">
                <a href="/Product/Create" class="btn btn-primary ms-2">Create</a>
            </div>
        </div>
    </div>

</div>

<table id="myTable" class="table table-hover">
    <thead>
        <tr>
            <th>OrderId</th>
            <th>Item</th>
            <th>Status</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>


</table>
