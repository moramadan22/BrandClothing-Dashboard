@using ClothingBrandDashboard.Models
@model Login

@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Spicy+Rice&display=swap" rel="stylesheet">
<style>
    
    
    .f {
        font-family: "Kanit", sans-serif;
        font-weight: 900;
        font-style: italic;
    }
</style>


<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="col-lg-12 d-flex justify-content-center align-items-start login-title" >
            <div class="col text-center">
                <div>
                    <i class="fa fa-key" aria-hidden="true"></i>
                </div>
                <br />
                <div>
                    <h3 class="f" >ADMIN PANEL</h3>
                </div>
            </div>
        </div>


        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/Images/login-banner.jpg" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                <form asp-action="Login">


                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="Email"> Email</label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email . ." />
                        @* <span asp-validation-for="Email" class="text-danger"></span> *@
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Password . ." />
                        @* <span asp-validation-for="Password" class="text-danger"></span> *@
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block" >Sign in</button>
                    @* btn-primary btn-lg btn-block #D7BED4*@


                </form>
            </div>
        </div>
    </div>
</section>


