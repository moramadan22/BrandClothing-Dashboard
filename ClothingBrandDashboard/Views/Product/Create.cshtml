@using ClothingBrandDashboard.ModelVW
@model ProductVm
@{
    ViewBag.bigtitle = "Product Management";
    ViewBag.smalltitle = "Create ";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<form method="post" asp-action="Create" asp-controller="Product" enctype="multipart/form-data">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>

    </div>

    <div>
        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories">
            <option disabled selected> --Select Category-- </option>
        </select>
       @*  <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
        <span asp-validation-for="CategoryId" class="text-danger"></span> *@

    </div>


    <div>
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" type="file" name="Image" id="Image" />

       
    </div>
    <br />
    <div>
        <label asp-for="StockQuantity"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>

    </div>
   @*  <div>
        <label asp-for="DiscountId"></label>
        <input asp-for="DiscountId" class="form-control" />
        <span asp-validation-for="DiscountId" class="text-danger"></span>

    </div> *@
    <div>
        <label asp-for="DiscountId"></label>
        <select asp-for="DiscountId" class="form-control" asp-items="Model.Discounts">
            <option disabled selected> --Select Discount-- </option>
        </select>
        @*  <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
        <span asp-validation-for="CategoryId" class="text-danger"></span> *@

    </div>

    <div>
        <button type="submit" class="btn btn-primary"> Create</button>
        <a asp-action="Index" asp-controller="Product" class="btn btn-warning"> Back Index</a>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
